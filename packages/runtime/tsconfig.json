{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2020",
    "lib": ["es2020"],
    "moduleResolution": "bundler",
    "outDir": "out",
    "rootDir": "src",
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
