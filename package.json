{
	"name": "escalier",
	"workspaces": [
		"packages/*",
		"playground"
	],
	"license": "MIT",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/escalier-lang/escalier"
	},
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "go build -o bin/lsp-server cmd/lsp-server/main.go && tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint",
		"test": "vitest run",
		"test:ui": "vitest --ui --coverage",
		"coverage": "vitest run --coverage",
		"typecheck": "tsc -b"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@types/node": "^20",
		"@vitest/coverage-v8": "^3.0.7",
		"@vitest/ui": "^3.0.7",
		"eslint": "^9.13.0",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.16.0",
		"vitest": "^3.0.7"
	}
}